%ul.nav.nav-pills.nav-justified
  %li{role: 'presentation'}
    %a{href: url('/')} All tweets
  %li.active{role: 'presentation'}
    %a{href: url('/with_hashtags')} Tweets with hashtags
  %li{role: 'presentation'}
    %a{href: url('/stats')} Hashtag statistics
  %li{role: 'presentation'}
    %a{href: url('/choose_hashtags')} Choose which hashtags to track
.panel.panel-default
  %table.table.table-striped
    %thead
      %tr
        %th Author
        %th Text
        %th Created at
        %th Hashtags
    %tbody
      -@tweets_with_hashtags.each do |tweet|
        %tr
          %td=tweet[:author]
          %td=tweet[:text]
          %td=tweet[:created_at]
          %td=tweet[:hashtags]
