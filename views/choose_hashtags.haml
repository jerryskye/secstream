%ul.nav.nav-pills.nav-justified
  %li{role: 'presentation'}
    %a{href: url('/')} All tweets
  %li{role: 'presentation'}
    %a{href: url('/with_hashtags')} Tweets with hashtags
  %li{role: 'presentation'}
    %a{href: url('/stats')} Hashtag statistics
  %li.active{role: 'presentation'}
    %a{href: url('/choose_hashtags')} Choose which hashtags to track
.panel.panel-default
  .button-group{role: 'group'}
    %button.btn.btn-success{type: 'button', onclick: "submitHashtags('#{url('/choose_hashtags')}');"}Submit
    %button.btn.btn-info{type: 'button', onclick: '$("tbody > tr").toggleClass("info");'}Invert selection
    %table.table.table-hover.table-condensed
      %thead
        %tr
          %th ID
          %th Hashtag
      %tbody
        -@hashtags.each do |hashtag|
          %tr{onclick: '$(this).toggleClass("info");'}
            %td=hashtag[:id]
            %td=hashtag[:hashtag]
%script{type: 'text/javascript', src: url('/hashtags.js')}
